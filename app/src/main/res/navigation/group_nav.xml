<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/group_nav"
    app:startDestination="@id/stepOneFragment">

    <fragment
        android:id="@+id/stepOneFragment"
        android:name="com.doubleclick.marktinhome.ui.MainScreen.Groups.CreateGroup.StepOneFragment"
        android:label="StepOneFragment"
        tools:layout="@layout/fragment_step_one" >
        <action
            android:id="@+id/action_stepOneFragment_to_stepTwoFragment"
            app:destination="@id/stepTwoFragment"
            app:enterAnim="@anim/lefttoright"
            app:exitAnim="@anim/righttoleft"
            app:popEnterAnim="@anim/lefttoright"
            app:popExitAnim="@anim/righttoleft"/>
    </fragment>
    <fragment
        android:id="@+id/stepTwoFragment"
        android:name="com.doubleclick.marktinhome.ui.MainScreen.Groups.CreateGroup.StepTwoFragment"
        android:label="StepTwoFragment"
        tools:layout="@layout/fragment_step_two" >
        <action
            android:id="@+id/action_stepTwoFragment_to_stepThreeFragment"
            app:destination="@id/stepThreeFragment"
            app:enterAnim="@anim/lefttoright"
            app:exitAnim="@anim/righttoleft"
            app:popEnterAnim="@anim/lefttoright"
            app:popExitAnim="@anim/righttoleft"/>
        <action
            android:id="@+id/action_stepTwoFragment_to_stepOneFragment"
            app:destination="@id/stepOneFragment"
            app:enterAnim="@anim/lefttoright"
            app:exitAnim="@anim/righttoleft"
            app:popEnterAnim="@anim/lefttoright"
            app:popExitAnim="@anim/righttoleft"/>
    </fragment>
    <fragment
        android:id="@+id/stepThreeFragment"
        android:name="com.doubleclick.marktinhome.ui.MainScreen.Groups.CreateGroup.StepThreeFragment"
        android:label="StepThreeFragment"
        tools:layout="@layout/fragment_step_three"
        app:enterAnim="@anim/lefttoright"
        app:exitAnim="@anim/righttoleft"
        app:popEnterAnim="@anim/lefttoright"
        app:popExitAnim="@anim/righttoleft">

    </fragment>
</navigation>